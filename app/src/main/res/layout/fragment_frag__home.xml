<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/HomeFragment"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:background="@drawable/card_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunitosansregular"
                    android:text="WOW! Yves, votre solde est"
                    android:layout_marginVertical="20dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunitosansbold"
                    android:layout_marginBottom="10dp"
                    android:text="1 500 000 XOF"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(07 08 30 77 56)"
                    android:fontFamily="@font/nunitosansregular"
                    android:textSize="20dp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="50dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/homeSendMoney"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bordered_rounded_button_yellow"
                android:fontFamily="@font/nunitosansregular"
                android:text="Envoyer de l'argent"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/nunitosansbold"
                android:text="Transactions effectuées"
                android:textColor="@color/gray"
                android:textSize="24dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunitosansbold"
                    android:text="À Bassa Henri (0706050403)"
                    android:textColor="@color/yellow"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/date11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nunitosansbold"
                    android:text="30 Oct 2023"
                    android:textColor="@color/gray"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/amount12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunitosansbold"
                android:text="1.000.000F"
                android:textAlignment="textEnd"
                android:textColor="@color/yellow"
                android:textSize="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunitosansbold"
                    android:text="À Bassa Henri (0706050403)"
                    android:textColor="@color/yellow"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/date16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nunitosansbold"
                    android:text="30 Oct 2023"
                    android:textColor="@color/gray"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/amount15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunitosansbold"
                android:text="5.000F"
                android:textAlignment="textEnd"
                android:textColor="@color/yellow"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>